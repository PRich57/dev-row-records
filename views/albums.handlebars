<!-- ALL ALBUMS SECTION -->

<div class="container-fluid mx-0">
  <div class="row mt-5 mb-2 justify-content-around">
    <h1 class="text-center title-page">ALBUMS</h1>
  </div>

  <div class="row d-flex col-lg-12 col-md-9 pb-5 mt-2">

    {{#each artists as |artist|}}
      <h2 class="text-center border-bottom">{{artist_name}}</h2>
      {{#each albums as |album|}}
      <div
        class="cardEvent col-xl-3 col-lg-6 col-12 d-flex align-items-center justify-content-center p-3 pb-5 mb-4"
      >
        <div class="card card-shade album-card bg-dark get-single-artist" id="{{artist.id}}">
          <img
            src="{{album.filename}}"
            class="card-img-top img-fluid"
            alt="image of {{album.album_name}}"
            id="albumIndex"
          />
          <div class="card-body d-flex justify-content-center">
            <h5 class="card-title">{{album.album_name}}</h5>
          </div>
        </div>
        <button type="button" class="btn btn-dark" style = "position: relative; bottom: -143px; right: 47px">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill= {{#calculation album.id ../../favorites "artist_id"}}{{/calculation}} class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "album_id" id = {{album.id}}>
        <button type="button" class="btn btn-dark" style = "position: relative; bottom: -185px; right: 47px">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "album_id" id = {{album.id}}>
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z">
              </path>
            </svg>
        </button>
      </div>
    {{/each}}
    {{/each}}

  </div>
</div>