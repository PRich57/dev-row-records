<!-- BODY -->
<!-- COVER IMAGE SECTION -->
<div class="container-fluid mx-0 p-5" style = "border: .2rem solid red">
  <div class = "row">
      <div class = "col-lg-6 d-flex justify-content-center align-items-center" style = "border: .2rem solid green">
      <h1 style = "color: white">{{artist_name}}</h1>
    </div>
    <div class = "col-lg-6 d-flex justify-content-center" style = "border: .2rem solid green" >
      <img src="{{filename}}" class="img-fluid" alt="rock-band-homepage">
    </div>

  </div> 

  <div class = "d-flex justify-content-center align-items-center my-3">
    <h2>ALBUMS</h2>
  </div>
  <div class = "row" style = "border: .2rem solid blue" id = "artist-div-row">
      {{#each albums as |album|}}
     <div class = "col-xl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3" style = "border: .2rem solid green">
        <div class="card" style="width: 18rem; height: 100%">
          <img src="{{album.filename}}" class="card-img-top" alt="Image of {{album.album_name}}">
          <div class="card-body d-flex justify-content-center">
            <h5 class="card-title">{{album.album_name}}</h5>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  <div class = "d-flex justify-content-center align-items-center my-3">
    <h2>MERCH</h2>
  </div>
    <div class = "row" style = "border: .2rem solid blue" id = "artist-div-row">
      {{#each merches as |merch|}}
     <div class = "col-xl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3" style = "border: .2rem solid green">
        <div class="card" style="width: 18rem; height: 100%">
          <img src="{{merch.filename}}" class="card-img-top" alt="Image of {{merch.merch_name}}">
          <div class="card-body d-flex justify-content-center flex-column">
            <h5 class="card-title">{{merch.merch_name}}</h5>
            <h6 class = "card-subtitle">{{merch.price}}</h6>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
</div>

