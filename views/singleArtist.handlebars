<!-- BODY -->
<!-- Cover Image -->
<div class="container-fluid mx-0 p-5">
  <div class = "row">
      <div class = "col-lg-6 d-flex justify-content-center align-items-center">
      <h1 class = "single-artist-title" style = "color: white">{{artist.artist_name}}</h1>
    </div>
    <div class = "col-lg-6 d-flex justify-content-center" >
      <img src="{{artist.filename}}" class="img-fluid card-shade" style="border-radius: .2rem;" alt="rock-band-homepage">
    </div>
  </div> 

{{!-- Albums --}}
  <div class = "row d-flex col-lg-12 col-md-9 my-4 justify-content-center">
    <h2 class="text-center border-bottom my-5">ALBUMS</h2>
  </div>
  <div class = "row d-flex justify-content-around" id = "artist-div-row">
      {{#each artist.albums as |album|}}
     <div class = "col-xl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3">
        <div class="card card-shade album-card bg-dark">
          <img src="{{album.filename}}" class="card-img-top custom-card-img" alt="Image of {{album.album_name}}">
          <div class="card-body d-flex justify-content-center" style = "position: relative">
            <h5 class="card-title">{{album.album_name}}</h5>
            <button type="button" class="btn btn-dark" style = "position: absolute; right: 0px; bottom: 0px">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill= {{#if ../favorites}}{{#calculation album.id ../favorites "album_id"}}{{/calculation}}{{else}}"white"{{/if}} class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "album_id" id = {{album.id}}>
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z">
                </path>
              </svg>
        </button>
          </div>
        </div>
        
      </div>
      {{/each}}
    </div>

  {{!-- Merch --}}
  <div class = "row d-flex col-lg-12 col-md-9 my-4 justify-content-center">
    <h2 class="text-center border-bottom my-5">MERCH</h2>
  </div>
    <div class = "row d-flex col-lg-12 col-md-9 my-4 justify-content-center" id = "artist-div-row">
      {{#each artist.merches as |merch|}}
     <div class = "col-xxl-3 col-md-6 col-12 d-flex align-items-center justify-content-center mb-5">
        <div class="card card-shade album-card bg-dark my-3">
          <img src="{{merch.filename}}" class="card-img-top img-fluid" alt="Image of {{merch.merch_name}}" style="object-fit: cover;">
          <div class="card-body d-flex justify-content-center flex-column" style = "position: relative">
            <h5 class="card-title text-center">{{merch.merch_name}}</h5>
            <h6 class = "card-subtitle text-center">${{merch.price}}</h6>
            <button type="button" class="btn btn-dark" style = "position: absolute; right: 0px; bottom: 0px">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill= {{#if ../favorites}}{{#calculation merch.id ../favorites "merch_id"}}{{/calculation}}{{else}}"white"{{/if}} class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "merch_id" id = {{merch.id}}>
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z">
                </path>
              </svg>
         </button>
          </div>
        </div>
        
      </div>
      {{/each}}
    </div>
</div>






  
