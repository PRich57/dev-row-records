      </div>
    <!-- FEATURED ALBUMS -->
      <div class = "row text-center py-0">
        <h2 class="mt-5 mb-1 border-bottom"> FEATURED ALBUMS</h2>
      </div>
      <div class = "row">
        {{#each fourRandomAlbums as |randomAlbum|}}
        <div class = "cardEvent col-xl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3" >
          <div class="card album-card card-shade bg-dark get-single-artist" id = "{{randomAlbum.[0].artist_id}}" >
            <img src="{{randomAlbum.[0].filename}}" class="card-img-top img-fluid" alt="..." >
            <div class="card-body d-flex justify-content-center">
              <h5 class="card-title">{{randomAlbum.[0].album_name}}</h5>
            </div>
          </div>
        </div>
