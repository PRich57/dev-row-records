    <div class="container-fluid mx-0 p-4">
    <!-- FEATURED ARTISTS -->
      <div class = "row text-center py-0 ">
        <h2 class="mb-2 mt-3 border-bottom"> FEATURED ARTISTS</h2>
      </div>
      <div class = "row">
        {{#each fourRandomArtists as |randomArtist|}}
        <div class = "col-xxl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3 my-5" style = "position: relative">
          <a href = "/artists/{{randomArtist.[0].id}}">
          <div class="cardEvent card artist-card card-shade bg-dark get-single-artist"  id="{{randomArtist.[0].id}}">
            <img src="{{randomArtist.[0].filename}}" class="card-img-top img-fluid" alt="Image of {{randomArtist.[0].artist_name}}" style="object-fit: cover;">
            <div class="card-body d-flex justify-content-center"style = "position: relative">
              <h5 class="card-title text-center">{{randomArtist.[0].artist_name}}</h5>
                <button type="button" class="btn btn-dark" style = "position: absolute; bottom: 0px; right: 0px" data-bs-toggle="Sign in to add to favorites!" data-bs-placement="left" data-bs-title="Tooltip on left"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill= {{#if ../favorites}}{{#calculation randomArtist.[0].id ../favorites "artist_id"}}{{/calculation}}{{else}}"white"{{/if}} class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "artist_id"  id = {{randomArtist.[0].id}}>
                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z">
                  </path>
                </svg>
            </button>
            </div>
          </div>
        </a>    
            
        </div>
        {{/each}}
      </div>
    <!-- FEATURED ALBUMS -->
      <div class = "row text-center py-0">
        <h2 class="mt-5 mb-2 border-bottom">FEATURED ALBUMS</h2>
      </div>
      <div class = "row">
        {{#each fourRandomAlbums as |randomAlbum|}}
        <div class = "col-xxl-3 col-md-6 col-12 d-flex align-items-center justify-content-center my-5" >
          <a href="/artists/{{randomAlbum.[0].artist_id}}">
          <div class="cardEvent card album-card card-shade bg-dark get-single-artist" id = "{{randomAlbum.[0].artist_id}}" >
            <img src="{{randomAlbum.[0].filename}}" class="card-img-top img-fluid" alt="Image of {{randomAlbum.[0].album_name}}" style="object-fit: cover;">
            <div class="card-body d-flex justify-content-center" style = "position: relative">
              <h5 class="card-title">{{randomAlbum.[0].album_name}}</h5>
              <button type="button" class="btn btn-dark" style = "position: absolute; bottom: -0px; right: 0px">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill= {{#if ../favorites}}{{#calculation randomAlbum.[0].id ../favorites "album_id"}}{{/calculation}}{{else}}"white"{{/if}} class="bi bi-star-fill card-favorite-button" viewBox="0 0 16 16" data-type = "album_id"  id = {{randomAlbum.[0].id}}>
                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z">
                  </path>
                </svg>
          </button>
            </div>
          </div>
        </a>
        </div>
        {{/each}}
      </div>
    </div>
  