
<div id="home-container">
  <!-- BODY -->
  <!-- COVER IMAGE SECTION -->
  <div class="container-fluid px-4">

    <div class="row px-0 mx-auto">
      <img
        src="../Assets/homepage-SMTB_BW.jpg"
        class="img-fluid mx-0 p-0 rounded"
        alt="rock-band-homepage"
      />
    </div>
  </div>
