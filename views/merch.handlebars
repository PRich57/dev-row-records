    <div class="btn-group merch-sort-card card-shade">
        <button class="btn btn-secondary dropdown-toggle bg-dark" type="button" data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
            Sort by Type
        </button>
        <ul class="dropdown-menu">
            {{#each tags as |tag|}}
            <li class="dropdown-item sort-list-link merch-sort-li bg-dark" id="{{tag.tag_name}}">{{tag.tag_name}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="btn-group merch-sort-card card-shade">
        <button class="btn btn-secondary dropdown-toggle bg-dark" type="button" data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
            Sort by Artist
        </button>
        <ul class="dropdown-menu">
            {{#each dataArtistsPlain as |artist|}}
            <li class="dropdown-item sort-list-link merch-sort-li bg-dark" id="{{artist_name}}">{{artist_name}}</li>
            {{/each}}
        </ul>
    </div>

    {{!-- ALL MERCH SEPARATED BY TAG --}}
    <div class = "row d-flex justify-content-around">
        {{#each tags as |tag|}}
            <h2 class="text-center mt-5 mb-4" style = "border-bottom: .2rem solid white">{{tag.tag_name}}</h2>
            {{#each tag.merches as |merch|}}
                <div class = "col-xl-3 col-md-6 col-12 d-flex align-items-center justify-content-center p-3">
                    <div class="card card-shade bg-dark" style="width: 18rem; height: 100%">
                        <img src="{{merch.filename}}" class="card-img-top" alt="Image of {{merch.merch_name}}">
                        <div class="card-body d-flex justify-content-center flex-column">
                            <h5 class="card-title text-center">{{merch.merch_name}}</h5>
                            <h6 class = "card-subtitle text-center">${{merch.price}}</h6>
                        </div>
                    </div>
                </div>
        {{/each}}
        {{/each}}
    </div>
